<h2 class="text-center">プロフィール編集</h2>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <!-- エラーメッセージ表示部分 -->
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h4>入力に問題があります:</h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, local: true, html: { class: 'form' } do |f| %>
        <div class="mb-3">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :profile_image, "プロフィール画像" %>
          <%= f.file_field :profile_image, accept: "image/*", class: 'form-control' %>
        </div>
        <div class="d-grid mt-4">
          <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center mt-4">
    <div class="col-md-6 text-center">
      <%= link_to "退会フォーム", user_check_path, class: "btn btn-danger btn-sm" %>
    </div>
  </div>
</div>
