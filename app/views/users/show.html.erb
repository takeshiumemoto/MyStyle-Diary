<div class="container">
  <div class="row">
    <!-- 投稿フォーム -->
    <div class="col-4">
      <%= render "posts/new", post: @post %>
    </div>

    <!-- 過去の投稿 -->
    <div class="col-8">
      <h1>マイページ</h1>
      <h3>過去の投稿</h3>
      <% if @user.posts.any? %>
        <ul>
          <% @user.posts.each do |post| %>
            <li>
              <h4><%= post.title %></h4>
              <p><%= post.content %></p>
              <p>投稿日: <%= post.created_at.strftime('%Y/%m/%d') %></p>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>過去の投稿はありません</p>
      <% end %>
    </div>
  </div>
</div>