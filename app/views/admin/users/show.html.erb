<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h4 class="mb-4"><span class="p-1 bg-secondary text-white rounded"><%= @user.name %>さんの会員詳細</span></h4>
      <div class="d-flex flex-column align-items-start">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>会員ID</th>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td><%= @user.active_status %></td>
            </tr>
          </tbody>
        </table>
        <div class="mt-3">
          <%= link_to "一覧に戻る",request.referer, class: "btn btn-primary me-2" %>
          <%= link_to "退会処理", withdraw_admin_user_path(@user), method: :patch, class: "btn btn-danger", data: { confirm: "本当に退会しますか？" } %>
        </div>
      </div>
    </div>
  </div>
</div>
