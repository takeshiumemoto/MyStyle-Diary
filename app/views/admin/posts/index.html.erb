<div class="container mt-5">
  <h1 class="mb-4">投稿一覧</h1>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>投稿ID</th>
        <th>ユーザーID</th>
        <th>投稿者</th>
        <th>内容</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.id, post_path(post) %></td>
          <td><%= post.user.id%></td>
          <td><%= post.user.name %></td>
          <td><%= truncate(post.content, length: 100) %></td>
          <td>
            <%= link_to '詳細', admin_post_path(post), class: 'btn btn-info btn-sm' %>
            <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
