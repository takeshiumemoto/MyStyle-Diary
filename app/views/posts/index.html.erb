<div class="container">
  <div class="row">
    <!-- ユーザー情報と投稿フォーム -->
    <div class="col-md-4">
      <!-- ユーザー情報 -->
      <div class="mb-4">
        <%= render "users/profile", user: @user %>
      </div>
      <!-- 投稿フォーム -->
      <div class="mb-4">
        <%= render "new", post: @post %>
      </div>
    </div>

    <!-- 投稿一覧 -->
    <div class="col-md-8">
      <h1 class="text-center my-4">投稿一覧</h1>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-6 mb-4">
            <div class="card">
              <% if post.image.attached? %>
                <%= image_tag post.image, class: 'card-img-top', style: 'height: 200px; object-fit: cover;' %>
              <% end %>
              <div class="card-body">
                <h4 class="card-title"><%= link_to post.title, post_path(post), class: 'text-decoration-none text-dark' %></h4>
                <p class="card-text text-truncate" style="max-height: 4em; overflow: hidden;"><%= post.content %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <p class="mb-0">
                    <%= link_to "#{post.post_comments.count} コメント", post_path(post), class: "btn btn-link p-0" %>
                  </p>
                  <p class="mb-0">
                    <%= post.favorites.count %> いいね
                  </p>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <% if user_signed_in? %>
                    <% if post.favorited_by?(current_user) %>
                      <%= link_to post_favorite_path(post), method: :delete, class: "favorite-link btn btn-link p-0" do %>
                        <span style="color:red;">❤︎</span>
                      <% end %>
                    <% else %>
                      <%= link_to post_favorite_path(post), method: :post, class: "favorite-link btn btn-link p-0" do %>
                        <span style="color:blue;">❤︎</span>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
                <p class="card-text mt-2">
                  <small class="text-muted">投稿日: <%= post.created_at.strftime('%Y/%m/%d') %></small>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
